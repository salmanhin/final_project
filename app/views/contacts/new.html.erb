<div class="col-md-6 col-md-offset-3">
	
	<div class="new-contacts-form">
	<h1 id="page_title">Contact Us</h1><br>
		<%= form_for @contact do |f| %>
		<%= f.label :name %><br>
		<%= f.text_field :name, required: true %>
		<br>
		<%= f.label :email %><br>
		<%= f.email_field :email, required: true %>
		<br>
		<%= f.label :message %><br>
		<%= f.text_area :message, as: :text %>

		<dev class="hidden">
			<%= f.label :nickname %>
			<%= f.text_field :nickname, hint: 'leave this field blank' %>
		</dev>
		  <div class="form-actions">
			<%= f.submit 'Send Message', class: "btn-custom2" %>
			<%= link_to "Back", root_path, :class => 'btn-custom2' %>
		<% end %>
		</div>
		
	</div>
</div>